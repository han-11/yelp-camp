<% layout('layouts/boilerplate') %>




  <div class="row">
    <h1 class="text-center"> New Campgound</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds" method="POST">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" name="campground[title]" id="title" placeholder="title">
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" placeholder="location">
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input class="form-control" type="number" name="campground[price]" id="price" aria-describedby="price-label"
              placeholder="0.00">

          </div>

        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image URL</label>
          <input class="form-control" type="text" name="campground[image]" id="image" placeholder="imageurl">
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" name="campground[description]" id="description"
            placeholder="description"> </textarea>
        </div>

        <div class="mb-3">
          <button class="btn btn-success">Add Campground</button>
        </div>
      </form>
      <a href="/campgrounds">All Campgrounds</a>
    </div>
  </div>